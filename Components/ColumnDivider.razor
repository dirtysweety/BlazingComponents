
<Row Style="justify-content: center">
    <Column Width="@(Width)">
        <ColumnGap Gap="@(TopGap)"></ColumnGap>
        <div style="border-top: @(Border)"></div>
        <ColumnGap Gap="@(BottomGap)"></ColumnGap>
    </Column>
</Row>

@code
{
    [Parameter]
    public string Width { get; set; } = "100%";

    [Parameter]
    public string TopGap { get; set; } = "5px";

    [Parameter]
    public string BottomGap { get; set; } = "5px";

    [Parameter]
    public string Border { get; set; } = "1px solid black";
}
