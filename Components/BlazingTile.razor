<div style="display: flex; flex-direction: column; background-color: @(BackColor); box-shadow: 0 0 10px 1px red; box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.25); width: @(Width); height: @(Height); @Style">
    @ChildContent
</div>



@code{

    [Parameter]
    public string Width { get; set; } = "";

    [Parameter]
    public string Height { get; set; } = "";

    [Parameter]
    public string BackColor { get; set; } = "inherit";

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}


